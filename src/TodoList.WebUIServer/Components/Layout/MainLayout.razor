@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <TodoList.WebUIServer.Infrastructure.CustomErrorBoundary @ref="@errorBoundary" Context="Exception">
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="alert bg-danger text-white alert-dismissible" role="alert">
                        An error occurred while rendering the page. See browser console for details.
                        <button type="button" class="btn-close" @onclick="@errorBoundary.Recover"></button>
                    </div>
                </ErrorContent>
            </TodoList.WebUIServer.Infrastructure.CustomErrorBoundary>
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private ErrorBoundary errorBoundary;
}