<button class="@GetButtonClasses()" @onclick="OnClick" disabled="@Disabled" type="@Type">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="@Icon"></i>
    }
    @ChildContent
</button>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public string Color { get; set; } = "primary";
    [Parameter] public string Size { get; set; } = "md";
    [Parameter] public bool Outline { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public string Type { get; set; } = "button";
    [Parameter] public string Icon { get; set; }

    private string GetButtonClasses()
    {
        var classes = new List<string> { "btn" };

        classes.Add(Outline ? $"btn-outline-{Color}" : $"btn-{Color}");
        classes.Add($"btn-{Size}");

        return string.Join(" ", classes);
    }
}